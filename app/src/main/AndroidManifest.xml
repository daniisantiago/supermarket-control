<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danisantiago.supermarketcontrol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.AberturaApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Login"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.CadastroUser"
            android:label="@string/cadastro_user"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Home"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.CadastroProduto"
            android:label="@string/addProduto"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.HomeSupermercado"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activity.InicioCompra" />
        <activity android:name=".Activity.ListaCompras" />
        <activity
            android:name=".Activity.EsqueceuSenha"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activity.GerenciarCompras" />
        <activity android:name=".Activity.EditarListaCompras"></activity>
    </application>

</manifest>